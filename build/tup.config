#######################
#                     #
# BUILD CONFIGURATION #
#                     #
#######################

# Use debug information
CONFIG_IS_DEBUG=y

# Optimization level (0 to 3)
CONFIG_IS_O_LEVEL=1

# Use clang address sanitizer
CONFIG_IS_ASAN=n

# Use clang memory sanitizer
CONFIG_IS_MSAN=n

# Note, you will need to have libtcmalloc available.
CONFIG_IS_TCMALLOC=n

# Create static executables
CONFIG_IS_STATIC=y
